<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/color1"
tools:context="com.example.marvinloco.interfaz_texto_a_audio_para_personas.Secundaria">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.09"
                android:text="MENU PRINCIPAL"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.09"
                android:background="@android:color/holo_orange_light"
                android:visibility="visible"
                app:srcCompat="@drawable/btsirve" />


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="310dp"
                        android:layout_height="165dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.09"
                        app:srcCompat="@drawable/porque" />

                </LinearLayout>

            </LinearLayout>


            <ImageButton
                android:id="@+id/btn_2"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.09"
                android:background="@android:color/holo_orange_light"
                app:srcCompat="@drawable/btsomo" />


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="310dp"
                        android:layout_height="165dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.09"
                        app:srcCompat="@drawable/quienes" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_3"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:text="BIENVENID@ A LA APLICACIÃ“N"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>











